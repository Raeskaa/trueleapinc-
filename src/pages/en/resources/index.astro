---
import Page from '../../../layouts/Page.astro';

const lang = 'en';

const sections = [
  {
    title: 'Trust Center',
    description: 'Security certifications, compliance documentation, and governance frameworks. Everything you need to evaluate TrueLeap for your organization.',
    href: '/en/resources/trust-center',
    icon: 'shield',
    items: ['SOC 2 Type II Report', 'ISO 27001 Certificate', 'GDPR Compliance', 'Data Processing Agreement'],
  },
  {
    title: 'Newsroom',
    description: 'Press releases, company announcements, and media resources. Stay updated on TrueLeap\'s latest developments.',
    href: '/en/resources/newsroom',
    icon: 'newspaper',
    items: ['Press Releases', 'Media Kit', 'Executive Bios', 'Brand Guidelines'],
  },
  {
    title: 'Documentation',
    description: 'Technical guides, API reference, and deployment documentation. Everything developers and operators need.',
    href: '/en/resources/docs',
    icon: 'book',
    items: ['Getting Started', 'API Reference', 'Deployment Guides', 'SDK Documentation'],
  },
];

const quickLinks = [
  { title: 'Contact Sales', href: 'mailto:sales@trueleapinc.com', description: 'Talk to our solutions team' },
  { title: 'Partnership Inquiries', href: 'mailto:partners@trueleapinc.com', description: 'Become a TrueLeap partner' },
  { title: 'Media Contact', href: 'mailto:press@trueleapinc.com', description: 'Press and media inquiries' },
  { title: 'Support', href: 'mailto:support@trueleapinc.com', description: 'Technical support requests' },
];
---

<Page title="Resources" lang={lang}>
  <!-- Hero -->
  <section class="pt-32 pb-20 bg-cream relative overflow-hidden">
    <div class="absolute inset-0 grid-lines opacity-40"></div>
    <div class="max-w-7xl mx-auto px-6 relative z-10">
      <span class="text-caption text-muted mb-4 block">Resources</span>
      <h1 class="text-display-xl text-charcoal mb-8">
        <span class="display-serif">Resources</span>
      </h1>
      <p class="text-body-lg text-muted max-w-3xl">
        Documentation, security information, and company news. Everything you need 
        to evaluate, implement, and stay updated on TrueLeap.
      </p>
    </div>
  </section>

  <!-- Main Sections -->
  <section class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-6">
      <div class="grid md:grid-cols-3 gap-8">
        {sections.map((section) => (
          <a href={section.href} class="card group hover:border-primary/30 flex flex-col transition-all" style="transition-duration: var(--duration-normal);">
            <div class="w-12 h-12 rounded-xl bg-primary-lighter/50 flex items-center justify-center mb-4 group-hover:bg-primary-lighter transition-colors" style="transition-duration: var(--duration-normal);">
              <svg class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
              </svg>
            </div>
            <h3 class="text-xl font-medium text-charcoal mb-2 group-hover:text-primary transition-colors" style="transition-duration: var(--duration-normal);">
              {section.title}
            </h3>
            <p class="text-muted mb-6 flex-1">{section.description}</p>
            <ul class="space-y-2 pt-4 border-t border-border">
              {section.items.map((item) => (
                <li class="text-sm text-charcoal flex items-center gap-2">
                  <svg class="w-4 h-4 text-primary flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                  {item}
                </li>
              ))}
            </ul>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Quick Links -->
  <section class="py-24 bg-cream">
    <div class="max-w-7xl mx-auto px-6">
      <div class="max-w-3xl mb-12">
        <span class="text-caption text-primary mb-4 block">Contact</span>
        <h2 class="text-display-md text-charcoal mb-4">Get in Touch</h2>
        <p class="text-body-lg text-muted">
          Have questions? Reach out to the right team directly.
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        {quickLinks.map((link) => (
          <a href={link.href} class="card group hover:border-primary/30 transition-all" style="transition-duration: var(--duration-normal);">
            <h3 class="text-lg font-medium text-charcoal mb-1 group-hover:text-primary transition-colors" style="transition-duration: var(--duration-normal);">
              {link.title}
            </h3>
            <p class="text-sm text-muted">{link.description}</p>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Newsletter -->
  <section class="py-24 bg-charcoal text-white">
    <div class="max-w-3xl mx-auto px-6 text-center">
      <h2 class="text-display-md text-white mb-6">Stay Updated</h2>
      <p class="text-body-lg text-white/70 mb-8">
        Subscribe to our newsletter for product updates, impact stories, and 
        thought leadership on digital inclusion.
      </p>
      <form class="flex flex-col sm:flex-row gap-4 max-w-md mx-auto">
        <input 
          type="email" 
          placeholder="Enter your email"
          class="flex-1 px-4 py-3 bg-charcoal-light border border-border-dark text-white placeholder:text-white/40 focus:outline-none focus:border-primary-light"
        />
        <button type="submit" class="btn bg-white text-charcoal hover:bg-white/90 whitespace-nowrap">
          Subscribe
        </button>
      </form>
      <p class="text-xs text-white/40 mt-4">
        We respect your privacy. Unsubscribe at any time.
      </p>
    </div>
  </section>
</Page>
