---
import Page from '../../../layouts/Page.astro';
const lang = 'en';
---

<Page title="Trust Center" lang={lang}>
  <section class="pt-32 pb-20 bg-cream">
    <div class="max-w-7xl mx-auto px-6">
      <p class="font-mono uppercase tracking-[0.3em] text-xs text-charcoal/60 mb-4">Resources / Trust</p>
      <h1 class="font-display text-5xl md:text-6xl lg:text-7xl leading-tight text-charcoal mb-8">Trust <em>Center</em></h1>
      <p class="text-xl text-charcoal/70 max-w-3xl">Security, compliance, and governance for enterprise and government customers.</p>
    </div>
  </section>

  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-6">
      <div class="grid md:grid-cols-2 gap-12">
        <div>
          <h2 class="font-display text-3xl mb-6">Security</h2>
          <ul class="space-y-4">
            <li class="flex gap-3">
              <span class="text-indigo">✓</span>
              <span>SOC 2 Type II certified</span>
            </li>
            <li class="flex gap-3">
              <span class="text-indigo">✓</span>
              <span>ISO 27001 compliant</span>
            </li>
            <li class="flex gap-3">
              <span class="text-indigo">✓</span>
              <span>End-to-end encryption</span>
            </li>
            <li class="flex gap-3">
              <span class="text-indigo">✓</span>
              <span>Regular penetration testing</span>
            </li>
          </ul>
        </div>
        <div>
          <h2 class="font-display text-3xl mb-6">Compliance</h2>
          <ul class="space-y-4">
            <li class="flex gap-3">
              <span class="text-indigo">✓</span>
              <span>GDPR compliant</span>
            </li>
            <li class="flex gap-3">
              <span class="text-indigo">✓</span>
              <span>Data residency options</span>
            </li>
            <li class="flex gap-3">
              <span class="text-indigo">✓</span>
              <span>Government security clearances</span>
            </li>
            <li class="flex gap-3">
              <span class="text-indigo">✓</span>
              <span>Custom compliance frameworks</span>
            </li>
          </ul>
        </div>
      </div>

      <div class="mt-16 p-8 bg-cream rounded-2xl">
        <h3 class="font-display text-2xl mb-4">Request Security Documentation</h3>
        <p class="text-charcoal/70 mb-6">Access our SOC 2 report, penetration test summaries, and security whitepapers.</p>
        <a href="#" class="inline-flex items-center gap-2 text-indigo font-medium">
          Request Access →
        </a>
      </div>
    </div>
  </section>
</Page>
