---
import Page from '../../../layouts/Page.astro';

const lang = 'en';

const docCategories = [
  {
    title: 'Getting Started',
    description: 'Quick start guides and tutorials to get you up and running',
    icon: 'M13 10V3L4 14h7v7l9-11h-7z',
    links: [
      { title: 'Platform Overview', href: '#', isNew: false },
      { title: 'Quick Start Guide', href: '#', isNew: true },
      { title: 'Installation', href: '#', isNew: false },
    ],
  },
  {
    title: 'API Reference',
    description: 'Complete API documentation with examples and SDKs',
    icon: 'M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4',
    links: [
      { title: 'REST API', href: '#', isNew: false },
      { title: 'GraphQL API', href: '#', isNew: false },
      { title: 'Webhooks', href: '#', isNew: false },
    ],
  },
  {
    title: 'Edge SDK',
    description: 'Build applications on the TrueLeap edge platform',
    icon: 'M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z',
    links: [
      { title: 'JavaScript SDK', href: '#', isNew: false },
      { title: 'Python SDK', href: '#', isNew: false },
      { title: 'Go SDK', href: '#', isNew: true },
    ],
  },
  {
    title: 'Deployment Guides',
    description: 'Infrastructure setup and configuration best practices',
    icon: 'M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01',
    links: [
      { title: 'Node Deployment', href: '#', isNew: false },
      { title: 'Network Configuration', href: '#', isNew: false },
      { title: 'Security Hardening', href: '#', isNew: false },
    ],
  },
  {
    title: 'Integration Patterns',
    description: 'Best practices for integrating with existing systems',
    icon: 'M11 4a2 2 0 114 0v1a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-1a2 2 0 100 4h1a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-1a2 2 0 10-4 0v1a1 1 0 01-1 1H7a1 1 0 01-1-1v-3a1 1 0 00-1-1H4a2 2 0 110-4h1a1 1 0 001-1V7a1 1 0 011-1h3a1 1 0 001-1V4z',
    links: [
      { title: 'Authentication', href: '#', isNew: false },
      { title: 'Data Sync', href: '#', isNew: false },
      { title: 'Event Handling', href: '#', isNew: false },
    ],
  },
  {
    title: 'Release Notes',
    description: "What's new in each version of the platform",
    icon: 'M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z',
    links: [
      { title: 'Changelog', href: '#', isNew: true },
      { title: 'Migration Guides', href: '#', isNew: false },
      { title: 'Deprecations', href: '#', isNew: false },
    ],
  },
];

const sdks = [
  { 
    name: 'JavaScript', 
    command: 'npm install @trueleap/sdk',
    color: 'bg-amber-400',
    href: '#'
  },
  { 
    name: 'Python', 
    command: 'pip install trueleap',
    color: 'bg-sky-500',
    href: '#'
  },
  { 
    name: 'Go', 
    command: 'go get trueleap.io/sdk',
    color: 'bg-cyan-400',
    href: '#'
  },
  { 
    name: 'Rust', 
    command: 'cargo add trueleap',
    color: 'bg-orange-500',
    href: '#'
  },
];

const popularArticles = [
  { title: 'Deploying Your First Node', readTime: '5 min', href: '#' },
  { title: 'Offline-First Architecture', readTime: '8 min', href: '#' },
  { title: 'Federated Authentication', readTime: '12 min', href: '#' },
];
---

<Page title="Documentation" lang={lang}>
  <!-- Hero -->
  <section class="pt-32 pb-20 bg-cream relative overflow-hidden">
    <div class="absolute inset-0 grid-lines opacity-40"></div>
    <div class="max-w-7xl mx-auto px-6 relative z-10">
      <p class="text-caption text-primary mb-4">Resources / Documentation</p>
      <h1 class="text-display-xl text-charcoal mb-6">
        Developer <span class="display-serif text-gradient">Docs</span>
      </h1>
      <p class="text-body-lg text-muted max-w-2xl mb-10">
        Technical guides, API reference, and integration documentation. 
        Everything you need to build on the TrueLeap platform.
      </p>

      <!-- Search -->
      <div class="max-w-xl">
        <div class="relative group">
          <input 
            type="search" 
            placeholder="Search documentation..." 
            class="w-full px-5 py-4 pl-12 bg-white border border-border rounded-xl text-charcoal placeholder:text-muted focus:outline-none focus:border-primary focus:ring-2 focus:ring-primary/10 transition-all"
          />
          <svg class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-muted group-focus-within:text-primary transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
          <kbd class="absolute right-4 top-1/2 -translate-y-1/2 hidden sm:inline-flex items-center gap-1 px-2 py-1 text-xs text-muted bg-cream border border-border rounded">
            <span class="text-[10px]">âŒ˜</span>K
          </kbd>
        </div>
      </div>
    </div>
  </section>

  <!-- Quick Links -->
  <section class="py-3 bg-paper border-b border-border">
    <div class="max-w-7xl mx-auto px-6">
      <div class="flex items-center gap-4 overflow-x-auto">
        <span class="text-xs text-muted uppercase tracking-wider shrink-0">Popular</span>
        <div class="flex items-center gap-3">
          {popularArticles.map((article) => (
            <a 
              href={article.href} 
              class="inline-flex items-center gap-2 text-sm text-charcoal hover:text-primary transition-colors whitespace-nowrap"
            >
              <span>{article.title}</span>
              <span class="text-muted text-xs">({article.readTime})</span>
            </a>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Documentation Grid -->
  <section class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-6">
      <div class="mb-12">
        <h2 class="text-display-md text-charcoal mb-4">Browse by Category</h2>
        <p class="text-muted max-w-2xl">
          Find the documentation you need, organized by topic and use case.
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {docCategories.map((category) => (
          <div class="group p-6 bg-cream rounded-xl border border-border hover:border-primary/30 hover:shadow-lg transition-all duration-300">
            <!-- Icon -->
            <div class="w-12 h-12 bg-white rounded-xl border border-border flex items-center justify-center mb-5 group-hover:border-primary/30 group-hover:bg-primary/5 transition-all">
              <svg class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d={category.icon} />
              </svg>
            </div>
            
            <!-- Content -->
            <h3 class="text-lg font-medium text-charcoal mb-2 group-hover:text-primary transition-colors">
              {category.title}
            </h3>
            <p class="text-sm text-muted mb-5 leading-relaxed">{category.description}</p>
            
            <!-- Links -->
            <ul class="space-y-2">
              {category.links.map((link) => (
                <li>
                  <a 
                    href={link.href} 
                    class="flex items-center gap-2 text-sm text-charcoal/80 hover:text-primary transition-colors"
                  >
                    <svg class="w-3.5 h-3.5 text-primary/50" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
                    </svg>
                    <span>{link.title}</span>
                    {link.isNew && (
                      <span class="px-1.5 py-0.5 text-[10px] font-medium bg-primary text-white rounded">NEW</span>
                    )}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- SDKs Section -->
  <section class="py-24 bg-cream border-y border-border">
    <div class="max-w-7xl mx-auto px-6">
      <div class="flex flex-col lg:flex-row lg:items-end justify-between gap-8 mb-12">
        <div>
          <p class="text-caption text-primary mb-4">Developer Tools</p>
          <h2 class="text-display-md text-charcoal">SDKs & Libraries</h2>
        </div>
        <p class="text-muted max-w-md lg:text-right">
          Official SDKs for popular languages, plus community tools and integrations.
        </p>
      </div>
      
      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-4">
        {sdks.map((sdk) => (
          <a 
            href={sdk.href} 
            class="group flex flex-col p-5 bg-white border border-border rounded-xl hover:border-primary/30 hover:shadow-md transition-all"
          >
            <div class="flex items-center gap-3 mb-3">
              <div class={`w-3 h-3 rounded-full ${sdk.color}`}></div>
              <h3 class="font-medium text-charcoal group-hover:text-primary transition-colors">{sdk.name}</h3>
            </div>
            <code class="text-xs text-muted font-mono bg-cream px-3 py-2 rounded-lg border border-border">
              {sdk.command}
            </code>
          </a>
        ))}
      </div>
      
      <div class="mt-8 flex items-center justify-center gap-2 text-sm text-muted">
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z" />
        </svg>
        <span>All SDKs support offline-first patterns out of the box</span>
      </div>
    </div>
  </section>

  <!-- Support Section -->
  <section class="py-24 bg-charcoal">
    <div class="max-w-7xl mx-auto px-6">
      <div class="grid lg:grid-cols-2 gap-16 items-start">
        <!-- Left: Info -->
        <div>
          <p class="text-caption text-primary-light mb-4">Support</p>
          <h2 class="text-display-md text-white mb-4">Need Help?</h2>
          <p class="text-white/60 mb-8 max-w-md">
            Our developer relations team is here to help you succeed. From architecture 
            reviews to debugging sessions, we're invested in your success.
          </p>
          
          <div class="space-y-4">
            <a href="#" class="flex items-center gap-3 text-white/80 hover:text-white transition-colors">
              <div class="w-8 h-8 rounded-lg bg-white/10 flex items-center justify-center">
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                </svg>
              </div>
              <span>Join our Discord community</span>
            </a>
            <a href="#" class="flex items-center gap-3 text-white/80 hover:text-white transition-colors">
              <div class="w-8 h-8 rounded-lg bg-white/10 flex items-center justify-center">
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <span>Email developer support</span>
            </a>
            <a href="#" class="flex items-center gap-3 text-white/80 hover:text-white transition-colors">
              <div class="w-8 h-8 rounded-lg bg-white/10 flex items-center justify-center">
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
                </svg>
              </div>
              <span>Open an issue on GitHub</span>
            </a>
          </div>
        </div>
        
        <!-- Right: Enterprise CTA -->
        <div class="p-8 bg-charcoal-light border border-white/10 rounded-2xl">
          <h3 class="text-xl font-medium text-white mb-3">Enterprise Support</h3>
          <p class="text-white/60 mb-6 leading-relaxed">
            For enterprise customers, we offer dedicated support channels, SLAs, 
            and direct access to our engineering team.
          </p>
          <ul class="space-y-2 mb-8">
            <li class="flex items-center gap-2 text-sm text-white/70">
              <svg class="w-4 h-4 text-primary-light" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
              </svg>
              24/7 priority support
            </li>
            <li class="flex items-center gap-2 text-sm text-white/70">
              <svg class="w-4 h-4 text-primary-light" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
              </svg>
              Dedicated account manager
            </li>
            <li class="flex items-center gap-2 text-sm text-white/70">
              <svg class="w-4 h-4 text-primary-light" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
              </svg>
              Custom SLA agreements
            </li>
          </ul>
          <a href="/en/company" class="btn btn-primary w-full justify-center">
            Contact Sales
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-24 bg-white">
    <div class="max-w-3xl mx-auto px-6 text-center">
      <h2 class="text-display-md text-charcoal mb-6">
        Ready to start building?
      </h2>
      <p class="text-body-lg text-muted mb-10">
        Create a free developer account to access sandbox environments, 
        API keys, and all documentation resources.
      </p>
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        <a href="#" class="btn btn-primary">
          Create Developer Account
        </a>
        <a href="/en/resources" class="btn btn-secondary">
          Explore Resources
        </a>
      </div>
    </div>
  </section>
</Page>
