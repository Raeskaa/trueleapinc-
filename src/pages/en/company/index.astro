---
import Page from '../../../layouts/Page.astro';
const lang = 'en';
---

<Page title="Company" lang={lang}>
  <section class="pt-32 pb-20 bg-cream">
    <div class="max-w-7xl mx-auto px-6">
      <p class="font-mono uppercase tracking-[0.3em] text-xs text-charcoal/60 mb-4">Company</p>
      <h1 class="font-display text-5xl md:text-6xl lg:text-7xl leading-tight text-charcoal mb-8">About <em>TrueLeap</em></h1>
      <p class="text-xl text-charcoal/70 max-w-3xl">Building the infrastructure for digital equity.</p>
    </div>
  </section>

  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-6">
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        <a href="/en/company/mission" class="p-6 border border-border rounded-xl hover:border-indigo hover:shadow-lg transition-all">
          <h3 class="font-display text-xl mb-2">Mission & Vision</h3>
          <p class="text-sm text-charcoal/60">Our purpose and direction</p>
        </a>
        <a href="/en/company/leadership" class="p-6 border border-border rounded-xl hover:border-indigo hover:shadow-lg transition-all">
          <h3 class="font-display text-xl mb-2">Leadership</h3>
          <p class="text-sm text-charcoal/60">Meet our team</p>
        </a>
        <a href="/en/company/partners" class="p-6 border border-border rounded-xl hover:border-indigo hover:shadow-lg transition-all">
          <h3 class="font-display text-xl mb-2">Partners</h3>
          <p class="text-sm text-charcoal/60">Our ecosystem</p>
        </a>
        <a href="/en/company/careers" class="p-6 border border-border rounded-xl hover:border-indigo hover:shadow-lg transition-all">
          <h3 class="font-display text-xl mb-2">Careers</h3>
          <p class="text-sm text-charcoal/60">Join our mission</p>
        </a>
      </div>
    </div>
  </section>
</Page>
