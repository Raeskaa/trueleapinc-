---
import Page from '../../../layouts/Page.astro';
const lang = 'en';
---

<Page title="Partners" lang={lang}>
  <section class="pt-32 pb-20 bg-cream">
    <div class="max-w-7xl mx-auto px-6">
      <p class="font-mono uppercase tracking-[0.3em] text-xs text-charcoal/60 mb-4">Company / Partners</p>
      <h1 class="font-display text-5xl md:text-6xl lg:text-7xl leading-tight text-charcoal mb-8">Our <em>Partners</em></h1>
      <p class="text-xl text-charcoal/70 max-w-3xl">Working together to bridge the digital divide.</p>
    </div>
  </section>

  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-6">
      <h2 class="font-display text-3xl mb-8">Strategic Partners</h2>
      <div class="grid md:grid-cols-4 gap-8 mb-16">
        <div class="aspect-video bg-cream rounded-xl flex items-center justify-center">Logo</div>
        <div class="aspect-video bg-cream rounded-xl flex items-center justify-center">Logo</div>
        <div class="aspect-video bg-cream rounded-xl flex items-center justify-center">Logo</div>
        <div class="aspect-video bg-cream rounded-xl flex items-center justify-center">Logo</div>
      </div>

      <h2 class="font-display text-3xl mb-8">Technology Partners</h2>
      <div class="grid md:grid-cols-4 gap-8">
        <div class="aspect-video bg-cream rounded-xl flex items-center justify-center">Logo</div>
        <div class="aspect-video bg-cream rounded-xl flex items-center justify-center">Logo</div>
        <div class="aspect-video bg-cream rounded-xl flex items-center justify-center">Logo</div>
        <div class="aspect-video bg-cream rounded-xl flex items-center justify-center">Logo</div>
      </div>
    </div>
  </section>
</Page>
