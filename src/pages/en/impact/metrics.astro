---
import Page from '../../../layouts/Page.astro';
import { AnimatedSection } from '../../../components/ui/AnimatedSection';
import { NumberTicker } from '../../../components/ui/NumberTicker';

const lang = 'en';

const primaryMetrics = [
  { value: 2.3, suffix: 'M', label: 'People with first-time internet access', category: 'Connectivity' },
  { value: 450, suffix: 'K', label: 'Students using digital learning tools', category: 'Education' },
  { value: 120, suffix: 'K', label: 'Telemedicine consultations enabled', category: 'Healthcare' },
];

const secondaryMetrics = [
  { value: '$47M', label: 'Economic activity enabled', category: 'Economic' },
  { value: '1,200', label: 'Edge nodes deployed', category: 'Infrastructure' },
  { value: '100%', label: 'Solar-powered operations', category: 'Sustainability' },
  { value: '47', label: 'Countries reached', category: 'Geographic' },
  { value: '99.7%', label: 'Network uptime (30-day)', category: 'Reliability' },
  { value: '<2W', label: 'Average power consumption', category: 'Efficiency' },
];

const impactStories = [
  {
    metric: '340%',
    title: 'Increase in School Enrollment',
    location: 'Rural Rwanda',
    description: 'After deploying TrueLeap nodes in 12 villages, school enrollment increased dramatically as families gained access to digital learning resources.',
  },
  {
    metric: '89%',
    title: 'Reduction in Travel for Healthcare',
    location: 'Bihar, India',
    description: 'Telemedicine services reduced the need for expensive and time-consuming travel to urban healthcare facilities.',
  },
  {
    metric: '$2.4M',
    title: 'Annual Savings for Government',
    location: 'Ghana',
    description: 'Digital service delivery eliminated paper-based processes and reduced operational costs across 200+ service points.',
  },
];
---

<Page title="Impact Metrics" lang={lang}>
  <!-- Hero -->
  <section class="pt-32 pb-24 bg-cream relative overflow-hidden">
    <div class="absolute inset-0 grid-lines opacity-40"></div>
    <div class="max-w-7xl mx-auto px-6 relative z-10">
      <AnimatedSection client:visible direction="up">
        <p class="text-caption text-muted mb-4">Impact / Data</p>
      </AnimatedSection>
      
      <AnimatedSection client:visible direction="up" delay={0.1}>
        <h1 class="text-display-xl text-charcoal mb-8">
          Impact <em class="display-serif">Data</em>
        </h1>
      </AnimatedSection>
      
      <AnimatedSection client:visible direction="up" delay={0.2}>
        <p class="text-body-lg text-muted max-w-3xl mb-8">
          We measure what matters. These aren't vanity metricsâ€”they're lives changed, 
          opportunities created, and communities transformed.
        </p>
      </AnimatedSection>

      <AnimatedSection client:visible direction="up" delay={0.3}>
        <div class="flex flex-wrap gap-4">
          <a href="/en/impact/case-studies" class="btn btn-primary">
            Read Case Studies
          </a>
          <a href="/en/impact/network-map" class="btn btn-secondary">
            View Live Network
          </a>
        </div>
      </AnimatedSection>
    </div>
  </section>

  <!-- Primary Metrics -->
  <section class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-6">
      <div class="grid md:grid-cols-3 gap-8">
        {primaryMetrics.map((metric, i) => (
          <AnimatedSection client:visible direction="up" delay={0.1 * i}>
            <div class="p-10 bg-cream rounded-2xl text-center">
              <p class="text-caption text-primary mb-4">{metric.category}</p>
              <p class="text-display-lg text-charcoal mb-3">
                <NumberTicker client:visible value={metric.value} />{metric.suffix}
              </p>
              <p class="text-muted">{metric.label}</p>
            </div>
          </AnimatedSection>
        ))}
      </div>
    </div>
  </section>

  <!-- Secondary Metrics Grid -->
  <section class="py-24 bg-charcoal text-white">
    <div class="max-w-7xl mx-auto px-6">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <AnimatedSection client:visible direction="up">
          <p class="text-caption text-primary-light mb-4">By The Numbers</p>
          <h2 class="text-display-md text-white mb-4">Infrastructure & Reach</h2>
          <p class="text-white/60">
            The foundation that makes our impact possible.
          </p>
        </AnimatedSection>
      </div>
      
      <div class="grid grid-cols-2 md:grid-cols-3 gap-8">
        {secondaryMetrics.map((metric, i) => (
          <AnimatedSection client:visible direction="up" delay={0.05 * i}>
            <div class="text-center p-6">
              <p class="text-3xl md:text-4xl font-medium text-white mb-2">{metric.value}</p>
              <p class="text-sm text-white/80 mb-1">{metric.label}</p>
              <p class="text-xs text-white/40">{metric.category}</p>
            </div>
          </AnimatedSection>
        ))}
      </div>
    </div>
  </section>

  <!-- Impact Stories -->
  <section class="py-24 bg-cream">
    <div class="max-w-7xl mx-auto px-6">
      <div class="flex flex-col lg:flex-row lg:items-end justify-between gap-8 mb-12">
        <AnimatedSection client:visible direction="up">
          <p class="text-caption text-primary mb-4">Evidence</p>
          <h2 class="text-display-md text-charcoal">Numbers in Context</h2>
        </AnimatedSection>
        <AnimatedSection client:visible direction="up" delay={0.1}>
          <p class="text-muted max-w-md">
            Behind every metric is a story of transformation. Here are a few examples 
            of what the data represents in real communities.
          </p>
        </AnimatedSection>
      </div>
      
      <div class="grid md:grid-cols-3 gap-6">
        {impactStories.map((story, i) => (
          <AnimatedSection client:visible direction="up" delay={0.1 * i}>
            <div class="card h-full flex flex-col">
              <p class="text-3xl font-medium text-primary mb-2">{story.metric}</p>
              <h3 class="text-xl font-medium text-charcoal mb-1">{story.title}</h3>
              <p class="text-caption text-muted mb-4">{story.location}</p>
              <p class="text-muted text-sm flex-1">{story.description}</p>
            </div>
          </AnimatedSection>
        ))}
      </div>
    </div>
  </section>

  <!-- Methodology -->
  <section class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-6">
      <div class="grid md:grid-cols-2 gap-16 items-center">
        <AnimatedSection client:visible direction="left">
          <div>
            <p class="text-caption text-primary mb-4">Transparency</p>
            <h2 class="text-display-md text-charcoal mb-6">How We Measure</h2>
            <p class="text-muted mb-6">
              Our metrics are collected through a combination of automated telemetry 
              from our edge nodes and third-party impact assessments. We're committed 
              to transparent, verifiable data.
            </p>
            <div class="space-y-4">
              <div class="flex items-start gap-3">
                <span class="w-1.5 h-1.5 rounded-full bg-primary mt-2 flex-shrink-0"></span>
                <span class="text-charcoal/80">Real-time network telemetry for usage data</span>
              </div>
              <div class="flex items-start gap-3">
                <span class="w-1.5 h-1.5 rounded-full bg-primary mt-2 flex-shrink-0"></span>
                <span class="text-charcoal/80">Annual third-party impact assessments</span>
              </div>
              <div class="flex items-start gap-3">
                <span class="w-1.5 h-1.5 rounded-full bg-primary mt-2 flex-shrink-0"></span>
                <span class="text-charcoal/80">Partner-reported outcomes and feedback</span>
              </div>
              <div class="flex items-start gap-3">
                <span class="w-1.5 h-1.5 rounded-full bg-primary mt-2 flex-shrink-0"></span>
                <span class="text-charcoal/80">Government and academic research collaborations</span>
              </div>
            </div>
          </div>
        </AnimatedSection>
        
        <AnimatedSection client:visible direction="right" delay={0.1}>
          <div class="p-8 bg-cream rounded-2xl border border-border">
            <h3 class="text-xl font-medium text-charcoal mb-4">Request Full Report</h3>
            <p class="text-muted mb-6">
              Our annual impact report includes detailed methodology, data sources, 
              and third-party verification. Available to partners and stakeholders.
            </p>
            <a href="/en/resources/trust-center" class="link-arrow font-medium text-charcoal">
              Visit Trust Center
            </a>
          </div>
        </AnimatedSection>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-24 bg-cream">
    <div class="max-w-3xl mx-auto px-6 text-center">
      <AnimatedSection client:visible direction="up">
        <h2 class="text-display-md text-charcoal mb-6">
          Want to add to these numbers?
        </h2>
        <p class="text-body-lg text-muted mb-8">
          Partner with us to bring sovereign digital infrastructure to underserved 
          communities. Every deployment extends our collective impact.
        </p>
        <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
          <a href="mailto:hello@trueleapinc.com" class="btn btn-primary">
            Become a Partner
          </a>
          <a href="/en/solutions" class="btn btn-secondary">
            Explore Solutions
          </a>
        </div>
      </AnimatedSection>
    </div>
  </section>
</Page>
