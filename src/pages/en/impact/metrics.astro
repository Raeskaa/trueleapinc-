---
import Page from '../../../layouts/Page.astro';
const lang = 'en';
---

<Page title="Impact Metrics" lang={lang}>
  <section class="pt-32 pb-20 bg-cream">
    <div class="max-w-7xl mx-auto px-6">
      <p class="font-mono uppercase tracking-[0.3em] text-xs text-charcoal/60 mb-4">Impact / Data</p>
      <h1 class="font-display text-5xl md:text-6xl lg:text-7xl leading-tight text-charcoal mb-8">Impact <em>Data</em></h1>
      <p class="text-xl text-charcoal/70 max-w-3xl">Measuring what matters.</p>
    </div>
  </section>

  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-6">
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="p-8 bg-cream rounded-2xl">
          <p class="font-mono uppercase tracking-[0.3em] text-xs text-charcoal/60 mb-2">Connectivity</p>
          <p class="font-display text-5xl text-charcoal mb-2">2.3M</p>
          <p class="text-charcoal/70">People with first-time internet access</p>
        </div>
        <div class="p-8 bg-cream rounded-2xl">
          <p class="font-mono uppercase tracking-[0.3em] text-xs text-charcoal/60 mb-2">Education</p>
          <p class="font-display text-5xl text-charcoal mb-2">450K</p>
          <p class="text-charcoal/70">Students using digital learning tools</p>
        </div>
        <div class="p-8 bg-cream rounded-2xl">
          <p class="font-mono uppercase tracking-[0.3em] text-xs text-charcoal/60 mb-2">Healthcare</p>
          <p class="font-display text-5xl text-charcoal mb-2">120K</p>
          <p class="text-charcoal/70">Telemedicine consultations enabled</p>
        </div>
        <div class="p-8 bg-cream rounded-2xl">
          <p class="font-mono uppercase tracking-[0.3em] text-xs text-charcoal/60 mb-2">Economic</p>
          <p class="font-display text-5xl text-charcoal mb-2">$47M</p>
          <p class="text-charcoal/70">Economic activity enabled</p>
        </div>
        <div class="p-8 bg-cream rounded-2xl">
          <p class="font-mono uppercase tracking-[0.3em] text-xs text-charcoal/60 mb-2">Infrastructure</p>
          <p class="font-display text-5xl text-charcoal mb-2">1,200</p>
          <p class="text-charcoal/70">Edge nodes deployed</p>
        </div>
        <div class="p-8 bg-cream rounded-2xl">
          <p class="font-mono uppercase tracking-[0.3em] text-xs text-charcoal/60 mb-2">Sustainability</p>
          <p class="font-display text-5xl text-charcoal mb-2">100%</p>
          <p class="text-charcoal/70">Solar-powered operations</p>
        </div>
      </div>
    </div>
  </section>
</Page>
