---
import Page from '../../../../layouts/Page.astro';

const lang = 'en';

const useCases = [
  {
    title: 'Remote Operations',
    description: 'Connect mining sites, oil rigs, and agricultural operations in areas without traditional infrastructure. Real-time monitoring and control from anywhere.',
    icon: 'mining'
  },
  {
    title: 'Supply Chain Visibility',
    description: 'Track goods and assets across your entire supply chain, including last-mile delivery in emerging markets with limited connectivity.',
    icon: 'supply'
  },
  {
    title: 'Field Service Management',
    description: 'Equip field technicians with offline-capable tools for inspections, maintenance, and customer service in remote locations.',
    icon: 'service'
  },
  {
    title: 'Edge AI Processing',
    description: 'Process data locally for real-time insights. Predictive maintenance, quality control, and anomaly detection without cloud latency.',
    icon: 'ai'
  },
];

const benefits = [
  { metric: '99.9%', label: 'Uptime', description: 'Redundant mesh architecture' },
  { metric: '<10ms', label: 'Latency', description: 'Local edge processing' },
  { metric: '80%', label: 'Cost Reduction', description: 'vs satellite connectivity' },
  { metric: '0', label: 'Cloud Dependencies', description: 'Full operational autonomy' },
];

const caseStudy = {
  company: 'Newmont Mining Corporation',
  title: 'Connected Mine Operations',
  description: 'Newmont deployed TrueLeap infrastructure across 6 remote mining sites in West Africa, enabling real-time equipment monitoring, worker safety tracking, and autonomous vehicle coordination without relying on satellite connectivity.',
  results: [
    { metric: '6', label: 'Sites connected' },
    { metric: '23%', label: 'Efficiency gain' },
    { metric: '$4.2M', label: 'Annual savings' },
  ]
};

const industries = [
  { name: 'Mining & Resources', examples: 'Equipment monitoring, safety systems, autonomous vehicles' },
  { name: 'Energy & Utilities', examples: 'Grid monitoring, field crew coordination, meter reading' },
  { name: 'Agriculture', examples: 'Precision farming, supply chain, extension services' },
  { name: 'Logistics', examples: 'Fleet tracking, last-mile delivery, warehouse automation' },
  { name: 'Manufacturing', examples: 'Quality control, predictive maintenance, inventory' },
  { name: 'Telecommunications', examples: 'Network extension, rural coverage, tower monitoring' },
];
---

<Page title="Solutions for Enterprise" lang={lang}>
  <!-- Hero -->
  <section class="pt-32 pb-20 bg-cream relative overflow-hidden">
    <div class="absolute inset-0 grid-lines opacity-40"></div>
    <div class="max-w-7xl mx-auto px-6 relative z-10">
      <span class="text-caption text-primary mb-4 block">Solutions / Industry</span>
      <h1 class="text-display-xl text-charcoal mb-8">
        Edge Computing for <span class="display-serif">Enterprise</span>
      </h1>
      <p class="text-body-lg text-muted max-w-3xl mb-8">
        Distributed computing infrastructure for global operations. Process data at 
        the edge, reduce latency, and operate autonomously in any environment.
      </p>
      <div class="flex flex-wrap gap-4">
        <a href="mailto:enterprise@trueleapinc.com" class="btn btn-primary">
          Contact Enterprise Sales
        </a>
        <a href="/en/resources/docs" class="btn btn-secondary">
          Technical Documentation
        </a>
      </div>
    </div>
  </section>

  <!-- Key Benefits -->
  <section class="py-16 bg-charcoal">
    <div class="max-w-7xl mx-auto px-6">
      <div class="grid md:grid-cols-4 gap-8">
        {benefits.map((benefit) => (
          <div class="text-center">
            <p class="text-3xl md:text-4xl font-medium text-white mb-1">{benefit.metric}</p>
            <p class="text-sm text-white/80 font-medium mb-1">{benefit.label}</p>
            <p class="text-xs text-white/50">{benefit.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Use Cases -->
  <section class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-6">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <span class="text-caption text-primary mb-4 block">Use Cases</span>
        <h2 class="text-display-lg text-charcoal mb-6">Enterprise Applications</h2>
        <p class="text-body-lg text-muted">
          From remote operations to supply chain visibility, TrueLeap enables 
          enterprises to extend their digital capabilities beyond traditional infrastructure.
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 gap-8">
        {useCases.map((useCase) => (
          <div class="card">
            <div class="w-12 h-12 rounded-xl bg-primary-lighter/50 flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
              </svg>
            </div>
            <h3 class="text-xl font-medium text-charcoal mb-2">{useCase.title}</h3>
            <p class="text-muted">{useCase.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Industries -->
  <section class="py-24 bg-cream">
    <div class="max-w-7xl mx-auto px-6">
      <div class="max-w-3xl mb-16">
        <span class="text-caption text-primary mb-4 block">Industries</span>
        <h2 class="text-display-lg text-charcoal mb-6">Across Sectors</h2>
        <p class="text-body-lg text-muted">
          TrueLeap serves enterprises operating in challenging environments across multiple industries.
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {industries.map((industry) => (
          <div class="card">
            <h3 class="text-lg font-medium text-charcoal mb-2">{industry.name}</h3>
            <p class="text-sm text-muted">{industry.examples}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Case Study -->
  <section class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-6">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <div>
          <span class="inline-block px-3 py-1 rounded-full bg-indigo-light text-primary text-xs font-medium mb-4">
            Case Study
          </span>
          <p class="text-sm text-muted mb-2">{caseStudy.company}</p>
          <h2 class="text-display-md text-charcoal mb-6">{caseStudy.title}</h2>
          <p class="text-body-lg text-muted mb-8">{caseStudy.description}</p>
          <a href="/en/impact/case-studies" class="link-arrow font-medium text-charcoal">
            Read full case study
          </a>
        </div>
        
        <div>
          <div class="grid grid-cols-3 gap-4">
            {caseStudy.results.map((result) => (
              <div class="card text-center">
                <p class="text-2xl md:text-3xl font-medium text-charcoal mb-1">{result.metric}</p>
                <p class="text-xs text-muted">{result.label}</p>
              </div>
            ))}
          </div>
          
          <div class="mt-8 aspect-video rounded-2xl bg-cream border border-border flex items-center justify-center">
            <div class="text-center p-8">
              <div class="w-16 h-16 mx-auto mb-4 rounded-2xl bg-primary-lighter/50 flex items-center justify-center">
                <svg class="w-8 h-8 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z" />
                </svg>
              </div>
              <p class="text-sm text-muted">Connected Mine Operations</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Why TrueLeap -->
  <section class="py-24 bg-charcoal text-white">
    <div class="max-w-7xl mx-auto px-6">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <span class="text-caption text-primary-light mb-4 block">Why TrueLeap</span>
        <h2 class="text-display-lg text-white mb-6">Built for Enterprise Requirements</h2>
      </div>
      
      <div class="grid md:grid-cols-3 gap-8">
        <div class="p-8 rounded-2xl bg-charcoal-light border border-border-dark">
          <h3 class="text-xl font-medium text-white mb-4">Enterprise Security</h3>
          <p class="text-white/70">
            SOC 2 Type II certified. End-to-end encryption. Role-based access control. 
            Air-gapped deployment options for sensitive operations.
          </p>
        </div>
        <div class="p-8 rounded-2xl bg-charcoal-light border border-border-dark">
          <h3 class="text-xl font-medium text-white mb-4">Integration Ready</h3>
          <p class="text-white/70">
            REST APIs, MQTT, and OPC-UA support. Integrate with existing ERP, SCADA, 
            and IoT systems. Pre-built connectors for major platforms.
          </p>
        </div>
        <div class="p-8 rounded-2xl bg-charcoal-light border border-border-dark">
          <h3 class="text-xl font-medium text-white mb-4">Global Support</h3>
          <p class="text-white/70">
            24/7 support with regional coverage. Dedicated customer success managers. 
            On-site deployment assistance available worldwide.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-24 bg-white border-t border-border">
    <div class="max-w-3xl mx-auto px-6 text-center">
      <h2 class="text-display-md text-charcoal mb-6">
        Ready to extend your digital operations?
      </h2>
      <p class="text-body-lg text-muted mb-8">
        Our enterprise solutions team can help you design a deployment that meets 
        your specific requirements for security, scale, and integration.
      </p>
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        <a href="mailto:enterprise@trueleapinc.com" class="btn btn-primary">
          Contact Enterprise Sales
        </a>
        <a href="/en/resources/trust-center" class="btn btn-secondary">
          Security & Compliance
        </a>
      </div>
    </div>
  </section>
</Page>
