---
import Page from '../../../../layouts/Page.astro';

const lang = 'en';

const useCases = [
  {
    title: 'Disaster Response',
    description: 'Deploy communication infrastructure within 48 hours of a crisis. Coordinate relief efforts, track distributions, and connect displaced populations.',
    icon: 'emergency'
  },
  {
    title: 'Refugee Services',
    description: 'Provide digital identity, education, and financial services to refugee populations in camps and urban settings without reliable connectivity.',
    icon: 'users'
  },
  {
    title: 'Health Programs',
    description: 'Enable community health workers with offline-capable tools for patient registration, diagnostics, and health record management.',
    icon: 'health'
  },
  {
    title: 'Education Access',
    description: 'Deliver digital learning content to schools and community centers in areas without internet infrastructure.',
    icon: 'education'
  },
];

const benefits = [
  { metric: '48hr', label: 'Deployment Time', description: 'From arrival to operational network' },
  { metric: '0', label: 'Internet Required', description: 'Fully functional offline' },
  { metric: '5yr', label: 'Battery Life', description: 'Solar-powered, minimal maintenance' },
  { metric: '10km', label: 'Coverage Radius', description: 'Per edge node deployment' },
];

const caseStudy = {
  organization: 'International Rescue Committee',
  title: 'Pacific Cyclone Response Network',
  description: 'When Cyclone Maia devastated the Pacific islands in 2024, TrueLeap partnered with IRC to deploy emergency communication infrastructure across 12 affected islands within 72 hours, enabling coordination of relief efforts and family reunification services.',
  results: [
    { metric: '12', label: 'Islands connected' },
    { metric: '72hr', label: 'Time to deploy' },
    { metric: '45K', label: 'People served' },
  ]
};

const partners = [
  { name: 'UNHCR', type: 'Refugee Services' },
  { name: 'IRC', type: 'Disaster Response' },
  { name: 'Médecins Sans Frontières', type: 'Health' },
  { name: 'Save the Children', type: 'Education' },
  { name: 'World Food Programme', type: 'Logistics' },
  { name: 'CARE International', type: 'Development' },
];
---

<Page title="Solutions for NGOs" lang={lang}>
  <!-- Hero -->
  <section class="pt-32 pb-20 bg-cream relative overflow-hidden">
    <div class="absolute inset-0 grid-lines opacity-40"></div>
    <div class="max-w-7xl mx-auto px-6 relative z-10">
      <span class="text-caption text-primary mb-4 block">Solutions / Industry</span>
      <h1 class="text-display-xl text-charcoal mb-8">
        Humanitarian <span class="display-serif">Connectivity</span>
      </h1>
      <p class="text-body-lg text-muted max-w-3xl mb-8">
        Rapid-deployment infrastructure for crisis response and development programs. 
        Connect communities in hours, not months. No internet required.
      </p>
      <div class="flex flex-wrap gap-4">
        <a href="mailto:ngo@trueleapinc.com" class="btn btn-primary">
          Contact NGO Team
        </a>
        <a href="/en/resources/docs" class="btn btn-secondary">
          Deployment Guide
        </a>
      </div>
    </div>
  </section>

  <!-- Key Benefits -->
  <section class="py-16 bg-charcoal">
    <div class="max-w-7xl mx-auto px-6">
      <div class="grid md:grid-cols-4 gap-8">
        {benefits.map((benefit) => (
          <div class="text-center">
            <p class="text-3xl md:text-4xl font-medium text-white mb-1">{benefit.metric}</p>
            <p class="text-sm text-white/80 font-medium mb-1">{benefit.label}</p>
            <p class="text-xs text-white/50">{benefit.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Use Cases -->
  <section class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-6">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <span class="text-caption text-primary mb-4 block">Use Cases</span>
        <h2 class="text-display-lg text-charcoal mb-6">Humanitarian Applications</h2>
        <p class="text-body-lg text-muted">
          From emergency response to long-term development, TrueLeap enables 
          NGOs to deliver digital services where traditional infrastructure fails.
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 gap-8">
        {useCases.map((useCase) => (
          <div class="card">
            <div class="w-12 h-12 rounded-xl bg-primary-lighter/50 flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
              </svg>
            </div>
            <h3 class="text-xl font-medium text-charcoal mb-2">{useCase.title}</h3>
            <p class="text-muted">{useCase.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Case Study -->
  <section class="py-24 bg-cream">
    <div class="max-w-7xl mx-auto px-6">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <div>
          <span class="inline-block px-3 py-1 rounded-full bg-indigo-light text-primary text-xs font-medium mb-4">
            Case Study
          </span>
          <p class="text-sm text-muted mb-2">{caseStudy.organization}</p>
          <h2 class="text-display-md text-charcoal mb-6">{caseStudy.title}</h2>
          <p class="text-body-lg text-muted mb-8">{caseStudy.description}</p>
          <a href="/en/impact/case-studies" class="link-arrow font-medium text-charcoal">
            Read full case study
          </a>
        </div>
        
        <div>
          <div class="grid grid-cols-3 gap-4">
            {caseStudy.results.map((result) => (
              <div class="card text-center">
                <p class="text-2xl md:text-3xl font-medium text-charcoal mb-1">{result.metric}</p>
                <p class="text-xs text-muted">{result.label}</p>
              </div>
            ))}
          </div>
          
          <div class="mt-8 aspect-video rounded-2xl bg-white border border-border flex items-center justify-center">
            <div class="text-center p-8">
              <div class="w-16 h-16 mx-auto mb-4 rounded-2xl bg-primary-lighter/50 flex items-center justify-center">
                <svg class="w-8 h-8 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <p class="text-sm text-muted">Pacific Cyclone Response</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- NGO Partners -->
  <section class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-6">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <span class="text-caption text-primary mb-4 block">Partners</span>
        <h2 class="text-display-lg text-charcoal mb-6">Trusted by Leading Organizations</h2>
      </div>
      
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4">
        {partners.map((partner) => (
          <div class="p-6 bg-cream border border-border text-center">
            <p class="font-medium text-charcoal mb-1">{partner.name}</p>
            <p class="text-xs text-muted">{partner.type}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Why TrueLeap -->
  <section class="py-24 bg-charcoal text-white">
    <div class="max-w-7xl mx-auto px-6">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <span class="text-caption text-primary-light mb-4 block">Why TrueLeap</span>
        <h2 class="text-display-lg text-white mb-6">Built for Humanitarian Operations</h2>
      </div>
      
      <div class="grid md:grid-cols-3 gap-8">
        <div class="p-8 rounded-2xl bg-charcoal-light border border-border-dark">
          <h3 class="text-xl font-medium text-white mb-4">Rapid Deployment</h3>
          <p class="text-white/70">
            Pre-configured kits ship anywhere in the world. Set up by local staff 
            with minimal training. Operational within hours of arrival.
          </p>
        </div>
        <div class="p-8 rounded-2xl bg-charcoal-light border border-border-dark">
          <h3 class="text-xl font-medium text-white mb-4">Offline-First</h3>
          <p class="text-white/70">
            All applications work without internet. Data syncs automatically when 
            connectivity is available. Perfect for remote field operations.
          </p>
        </div>
        <div class="p-8 rounded-2xl bg-charcoal-light border border-border-dark">
          <h3 class="text-xl font-medium text-white mb-4">Low Total Cost</h3>
          <p class="text-white/70">
            Solar-powered with 5-year battery life. No recurring connectivity costs. 
            Designed for sustainability in resource-constrained environments.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-24 bg-white border-t border-border">
    <div class="max-w-3xl mx-auto px-6 text-center">
      <h2 class="text-display-md text-charcoal mb-6">
        Ready to discuss your program needs?
      </h2>
      <p class="text-body-lg text-muted mb-8">
        Our NGO solutions team specializes in rapid deployment for humanitarian 
        operations. We offer special pricing for registered nonprofits.
      </p>
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        <a href="mailto:ngo@trueleapinc.com" class="btn btn-primary">
          Contact NGO Team
        </a>
        <a href="/en/resources/trust-center" class="btn btn-secondary">
          Security & Compliance
        </a>
      </div>
    </div>
  </section>
</Page>
