---
import Page from '../../../../layouts/Page.astro';

const lang = 'en';

const useCases = [
  {
    title: 'National Digital ID',
    description: 'Secure, sovereign identity systems that work offline and protect citizen data within national borders.',
    icon: 'id'
  },
  {
    title: 'e-Government Services',
    description: 'Bring government services to rural areas without requiring internet connectivity or centralized infrastructure.',
    icon: 'building'
  },
  {
    title: 'Census & Data Collection',
    description: 'Collect and process census data locally, then sync when connectivity is available.',
    icon: 'clipboard'
  },
  {
    title: 'Emergency Communications',
    description: 'Resilient communication networks that work when traditional infrastructure fails.',
    icon: 'radio'
  },
];

const benefits = [
  { metric: '100%', label: 'Data Sovereignty', description: 'All citizen data stays within national borders' },
  { metric: '< 2W', label: 'Power per Node', description: 'Solar-powered operation in any location' },
  { metric: '0', label: 'Cloud Dependencies', description: 'No external services required' },
  { metric: '48hr', label: 'Deployment Time', description: 'Rapid setup for emergency scenarios' },
];

const caseStudy = {
  country: 'Republic of Rwanda',
  title: 'Digital Village Initiative',
  description: 'TrueLeap partnered with the Government of Rwanda to deploy digital infrastructure across 500 rural villages, enabling e-government services, digital payments, and educational content delivery.',
  results: [
    { metric: '500+', label: 'Villages connected' },
    { metric: '2.1M', label: 'Citizens with access' },
    { metric: '340%', label: 'Increase in service uptake' },
  ]
};
---

<Page title="Solutions for Governments" lang={lang}>
  <!-- Hero -->
  <section class="pt-32 pb-20 bg-cream relative overflow-hidden">
    <div class="absolute inset-0">
      <div class="absolute top-0 right-0 w-1/2 h-full bg-gradient-to-l from-indigo-light/20 to-transparent"></div>
    </div>
    <div class="max-w-7xl mx-auto px-6 relative z-10">
      <span class="text-caption text-indigo mb-4 block">Solutions / Industry</span>
      <h1 class="text-display-xl text-charcoal mb-8">
        Digital Infrastructure for <span class="display-serif">Governments</span>
      </h1>
      <p class="text-body-lg text-muted max-w-3xl mb-8">
        Sovereign digital infrastructure that enables governments to deliver services 
        to every citizen, regardless of connectivity. No cloud dependencies. 
        Complete data sovereignty.
      </p>
      <div class="flex flex-wrap gap-4">
        <a href="mailto:hello@trueleapinc.com" class="btn btn-primary">
          Contact Government Sales
        </a>
        <a href="/en/resources/docs" class="btn btn-secondary">
          Technical Documentation
        </a>
      </div>
    </div>
  </section>

  <!-- Key Benefits -->
  <section class="py-16 bg-charcoal">
    <div class="max-w-7xl mx-auto px-6">
      <div class="grid md:grid-cols-4 gap-8">
        {benefits.map((benefit) => (
          <div class="text-center">
            <p class="text-3xl md:text-4xl font-medium text-white mb-1">{benefit.metric}</p>
            <p class="text-sm text-white/80 font-medium mb-1">{benefit.label}</p>
            <p class="text-xs text-white/50">{benefit.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Use Cases -->
  <section class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-6">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <span class="text-caption text-indigo mb-4 block">Use Cases</span>
        <h2 class="text-display-lg text-charcoal mb-6">Government Applications</h2>
        <p class="text-body-lg text-muted">
          From digital identity to emergency communications, TrueLeap enables 
          governments to serve citizens in areas where traditional infrastructure fails.
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 gap-8">
        {useCases.map((useCase) => (
          <div class="card">
            <div class="w-12 h-12 rounded-xl bg-indigo-light/50 flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-indigo" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
              </svg>
            </div>
            <h3 class="text-xl font-medium text-charcoal mb-2">{useCase.title}</h3>
            <p class="text-muted">{useCase.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Case Study -->
  <section class="py-24 bg-cream">
    <div class="max-w-7xl mx-auto px-6">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <div>
          <span class="inline-block px-3 py-1 rounded-full bg-indigo-light text-indigo text-xs font-medium mb-4">
            Case Study
          </span>
          <p class="text-sm text-muted mb-2">{caseStudy.country}</p>
          <h2 class="text-display-md text-charcoal mb-6">{caseStudy.title}</h2>
          <p class="text-body-lg text-muted mb-8">{caseStudy.description}</p>
          <a href="/en/impact/case-studies" class="link-arrow font-medium text-charcoal">
            Read full case study
          </a>
        </div>
        
        <div>
          <div class="grid grid-cols-3 gap-4">
            {caseStudy.results.map((result) => (
              <div class="card text-center">
                <p class="text-2xl md:text-3xl font-medium text-charcoal mb-1">{result.metric}</p>
                <p class="text-xs text-muted">{result.label}</p>
              </div>
            ))}
          </div>
          
          <!-- Placeholder for case study image -->
          <div class="mt-8 aspect-video rounded-2xl bg-white border border-border flex items-center justify-center">
            <div class="text-center p-8">
              <div class="w-16 h-16 mx-auto mb-4 rounded-2xl bg-indigo-light/50 flex items-center justify-center">
                <span class="text-2xl">ðŸ‡·ðŸ‡¼</span>
              </div>
              <p class="text-sm text-muted">Rwanda Digital Village Initiative</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Why TrueLeap -->
  <section class="py-24 bg-charcoal text-white">
    <div class="max-w-7xl mx-auto px-6">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <span class="text-caption text-indigo-light mb-4 block">Why TrueLeap</span>
        <h2 class="text-display-lg text-white mb-6">Built for Government Requirements</h2>
      </div>
      
      <div class="grid md:grid-cols-3 gap-8">
        <div class="p-8 rounded-2xl bg-charcoal-light border border-border-dark">
          <h3 class="text-xl font-medium text-white mb-4">Data Sovereignty</h3>
          <p class="text-white/70">
            All data stays within national borders. No external cloud dependencies. 
            Full control over citizen information.
          </p>
        </div>
        <div class="p-8 rounded-2xl bg-charcoal-light border border-border-dark">
          <h3 class="text-xl font-medium text-white mb-4">Resilience</h3>
          <p class="text-white/70">
            Self-healing mesh networks with no single point of failure. 
            Works during natural disasters and emergencies.
          </p>
        </div>
        <div class="p-8 rounded-2xl bg-charcoal-light border border-border-dark">
          <h3 class="text-xl font-medium text-white mb-4">Sustainability</h3>
          <p class="text-white/70">
            Solar-powered nodes that operate indefinitely. Low total cost of 
            ownership compared to traditional infrastructure.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-24 bg-white border-t border-border">
    <div class="max-w-3xl mx-auto px-6 text-center">
      <h2 class="text-display-md text-charcoal mb-6">
        Ready to discuss your requirements?
      </h2>
      <p class="text-body-lg text-muted mb-8">
        Our government solutions team can help you design a deployment that 
        meets your specific needs for data sovereignty, scale, and resilience.
      </p>
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        <a href="mailto:government@trueleapinc.com" class="btn btn-primary">
          Contact Government Sales
        </a>
        <a href="/en/resources/trust-center" class="btn btn-secondary">
          Trust & Security
        </a>
      </div>
    </div>
  </section>
</Page>
