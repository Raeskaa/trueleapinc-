---
import Page from '../../../../layouts/Page.astro';

const lang = 'en';

const features = [
  {
    title: 'Offline-First Learning',
    description: 'Educational content that works without internet. Download once, access anywhere.',
    icon: 'download'
  },
  {
    title: 'Interactive Classrooms',
    description: 'Real-time collaboration between students and teachers, even without connectivity.',
    icon: 'users'
  },
  {
    title: 'Content Library',
    description: 'Pre-loaded educational materials from Khan Academy, Wikipedia, and more.',
    icon: 'book'
  },
  {
    title: 'Progress Tracking',
    description: 'Monitor student progress locally, sync to central systems when connected.',
    icon: 'chart'
  },
];

const benefits = [
  { metric: '2,500+', label: 'Schools Connected', description: 'Across 12 countries' },
  { metric: '850K', label: 'Students Reached', description: 'Active monthly learners' },
  { metric: '340%', label: 'Engagement Increase', description: 'vs. traditional methods' },
  { metric: '< $50', label: 'Cost Per Student', description: 'Annual infrastructure cost' },
];

const contentPartners = [
  'Khan Academy',
  'Wikipedia',
  'OpenStax',
  'CK-12',
  'MIT OpenCourseWare',
  'Coursera for Campus',
];
---

<Page title="Education Solutions" lang={lang}>
  <!-- Hero -->
  <section class="pt-32 pb-20 bg-cream relative overflow-hidden">
    <div class="absolute inset-0 grid-lines opacity-40"></div>
    <div class="max-w-7xl mx-auto px-6 relative z-10">
      <span class="text-caption text-primary mb-4 block">Solutions / Industry</span>
      <h1 class="text-display-xl text-charcoal mb-8">
        Connected Learning <span class="display-serif">Everywhere</span>
      </h1>
      <p class="text-body-lg text-muted max-w-3xl mb-8">
        Bring world-class educational content to schools without internet. 
        Our platform delivers interactive learning experiences that work 
        offline, powered by solar energy.
      </p>
      <div class="flex flex-wrap gap-4">
        <a href="mailto:education@trueleapinc.com" class="btn btn-primary">
          Contact Education Team
        </a>
        <a href="/en/impact/case-studies" class="btn btn-secondary">
          View Case Studies
        </a>
      </div>
    </div>
  </section>

  <!-- Key Metrics -->
  <section class="py-16 bg-charcoal">
    <div class="max-w-7xl mx-auto px-6">
      <div class="grid md:grid-cols-4 gap-8">
        {benefits.map((benefit) => (
          <div class="text-center">
            <p class="text-3xl md:text-4xl font-medium text-white mb-1">{benefit.metric}</p>
            <p class="text-sm text-white/80 font-medium mb-1">{benefit.label}</p>
            <p class="text-xs text-white/50">{benefit.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Features -->
  <section class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-6">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <div>
          <span class="text-caption text-primary mb-4 block">Platform Features</span>
          <h2 class="text-display-md text-charcoal mb-6">
            Education Without Barriers
          </h2>
          <p class="text-body-lg text-muted mb-8">
            TrueLeap for Education provides everything schools need to deliver 
            quality education without reliable internet infrastructure.
          </p>
          
          <div class="space-y-6">
            {features.map((feature) => (
              <div class="flex gap-4">
                <div class="w-10 h-10 rounded-lg bg-primary-lighter/50 flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                  </svg>
                </div>
                <div>
                  <h3 class="font-medium text-charcoal mb-1">{feature.title}</h3>
                  <p class="text-sm text-muted">{feature.description}</p>
                </div>
              </div>
            ))}
          </div>
        </div>
        
        <!-- Screenshot placeholder -->
        <div class="aspect-[4/3] rounded-2xl bg-gradient-to-br from-cream to-white border border-border overflow-hidden">
          <div class="w-full h-full flex flex-col items-center justify-center p-8">
            <div class="w-24 h-24 rounded-2xl bg-primary-lighter/50 flex items-center justify-center mb-4">
              <svg class="w-12 h-12 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M12 14l9-5-9-5-9 5 9 5z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z" />
              </svg>
            </div>
            <p class="text-charcoal font-medium text-center mb-1">Leapspace Education</p>
            <p class="text-sm text-muted text-center">Interactive classroom platform</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Content Partners -->
  <section class="py-24 bg-cream">
    <div class="max-w-7xl mx-auto px-6">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <span class="text-caption text-primary mb-4 block">Content Library</span>
        <h2 class="text-display-md text-charcoal mb-6">World-Class Content, Pre-Loaded</h2>
        <p class="text-body-lg text-muted">
          Every TrueLeap education deployment comes pre-loaded with educational 
          content from leading providers, all optimized for offline access.
        </p>
      </div>
      
      <div class="flex flex-wrap items-center justify-center gap-8">
        {contentPartners.map((partner) => (
          <div class="px-6 py-3 rounded-full bg-white border border-border text-charcoal font-medium">
            {partner}
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- How It Works -->
  <section class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-6">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <span class="text-caption text-primary mb-4 block">Deployment</span>
        <h2 class="text-display-md text-charcoal mb-6">How It Works</h2>
      </div>
      
      <div class="grid md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="w-16 h-16 rounded-full bg-primary-lighter flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl font-medium text-primary">1</span>
          </div>
          <h3 class="text-lg font-medium text-charcoal mb-2">Deploy Node</h3>
          <p class="text-muted">
            Install a solar-powered edge node at the school. 
            Takes less than 4 hours.
          </p>
        </div>
        <div class="text-center">
          <div class="w-16 h-16 rounded-full bg-primary-lighter flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl font-medium text-primary">2</span>
          </div>
          <h3 class="text-lg font-medium text-charcoal mb-2">Connect Devices</h3>
          <p class="text-muted">
            Students connect with any device â€” tablets, 
            laptops, or smartphones.
          </p>
        </div>
        <div class="text-center">
          <div class="w-16 h-16 rounded-full bg-primary-lighter flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl font-medium text-primary">3</span>
          </div>
          <h3 class="text-lg font-medium text-charcoal mb-2">Start Learning</h3>
          <p class="text-muted">
            Access educational content immediately. 
            No internet required.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-24 bg-charcoal text-white">
    <div class="max-w-3xl mx-auto px-6 text-center">
      <h2 class="text-display-md text-white mb-6">
        Bring connected learning to your schools
      </h2>
      <p class="text-body-lg text-white/70 mb-8">
        Join the 2,500+ schools already using TrueLeap to deliver 
        quality education without internet infrastructure.
      </p>
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        <a href="mailto:education@trueleapinc.com" class="btn bg-white text-charcoal hover:bg-white/90">
          Request a Demo
        </a>
        <a href="/en/impact/case-studies" class="btn bg-white/10 text-white border border-white/20 hover:bg-white/20">
          View Case Studies
        </a>
      </div>
    </div>
  </section>
</Page>
