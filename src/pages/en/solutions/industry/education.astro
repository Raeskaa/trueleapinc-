---
import Page from '../../../../layouts/Page.astro';
const lang = 'en';
---

<Page title="Solutions for Education" lang={lang}>
  <section class="pt-32 pb-20 bg-cream">
    <div class="max-w-7xl mx-auto px-6">
      <p class="font-mono uppercase tracking-[0.3em] text-xs text-charcoal/60 mb-4">Solutions / Education</p>
      <h1 class="font-display text-5xl md:text-6xl lg:text-7xl leading-tight text-charcoal mb-8">Connected <em>Learning</em></h1>
      <p class="text-xl text-charcoal/70 max-w-3xl">Bringing digital education to every student, regardless of location.</p>
    </div>
  </section>
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-6">
      <div class="grid md:grid-cols-3 gap-8">
        <div class="p-8 border border-border rounded-2xl">
          <h3 class="font-display text-2xl mb-4">Offline Content</h3>
          <p class="text-charcoal/70">Educational materials that work without connectivity.</p>
        </div>
        <div class="p-8 border border-border rounded-2xl">
          <h3 class="font-display text-2xl mb-4">Virtual Classrooms</h3>
          <p class="text-charcoal/70">Low-bandwidth video and collaboration tools.</p>
        </div>
        <div class="p-8 border border-border rounded-2xl">
          <h3 class="font-display text-2xl mb-4">Learning Analytics</h3>
          <p class="text-charcoal/70">Track progress and outcomes across your network.</p>
        </div>
      </div>
    </div>
  </section>
</Page>
