---
import Page from '../../../../layouts/Page.astro';

const lang = 'en';

const challenges = [
  {
    stat: '3.7B',
    label: 'People Unconnected',
    description: 'Nearly half the world\'s population lacks reliable internet access, concentrated in rural and remote areas.',
  },
  {
    stat: '96%',
    label: 'Rural Gap',
    description: 'In least developed countries, 96% of rural populations have no broadband access.',
  },
  {
    stat: '$100B+',
    label: 'Infrastructure Gap',
    description: 'Traditional infrastructure would cost over $100 billion to connect remaining populations.',
  },
];

const approach = [
  {
    title: 'Solar-Powered Infrastructure',
    description: 'Our edge nodes run entirely on solar power, requiring no grid connection. A single node serves up to 10km radius with 5+ years of autonomous operation.',
    icon: 'sun'
  },
  {
    title: 'Mesh Networking',
    description: 'Nodes automatically form resilient mesh networks, routing around failures and extending coverage. No single point of failure.',
    icon: 'network'
  },
  {
    title: 'Community Ownership',
    description: 'Infrastructure owned and operated by local communities or institutions. Sustainable economic models that don\'t rely on external subsidies.',
    icon: 'community'
  },
  {
    title: 'Offline-First Software',
    description: 'Applications designed to work without connectivity, syncing when available. Full functionality regardless of network status.',
    icon: 'offline'
  },
];

const metrics = [
  { value: '12M+', label: 'People Connected' },
  { value: '47', label: 'Countries' },
  { value: '2,400+', label: 'Edge Nodes' },
  { value: '<$5', label: 'Per Person Cost' },
];

const caseStudy = {
  country: 'Indonesia',
  title: 'Thousand Islands Connectivity',
  description: 'TrueLeap deployed infrastructure across 127 remote islands in Eastern Indonesia, connecting fishing communities to weather data, markets, and financial services for the first time.',
  results: [
    { metric: '127', label: 'Islands connected' },
    { metric: '340K', label: 'People reached' },
    { metric: '45%', label: 'Income increase' },
  ]
};
---

<Page title="Rural Connectivity" lang={lang}>
  <!-- Hero -->
  <section class="pt-32 pb-20 bg-cream relative overflow-hidden">
    <div class="absolute inset-0 grid-lines opacity-40"></div>
    <div class="max-w-7xl mx-auto px-6 relative z-10">
      <span class="text-caption text-primary mb-4 block">Solutions / Outcome</span>
      <h1 class="text-display-xl text-charcoal mb-8">
        Rural <span class="display-serif">Connectivity</span>
      </h1>
      <p class="text-body-lg text-muted max-w-3xl mb-8">
        Bridging the last mile to connect underserved communities. Solar-powered, 
        offline-first infrastructure that works where traditional approaches fail.
      </p>
      <div class="flex flex-wrap gap-4">
        <a href="/en/impact/network-map" class="btn btn-primary">
          View Live Network
        </a>
        <a href="/en/platform" class="btn btn-secondary">
          Explore Platform
        </a>
      </div>
    </div>
  </section>

  <!-- The Challenge -->
  <section class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-6">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <span class="text-caption text-primary mb-4 block">The Challenge</span>
        <h2 class="text-display-lg text-charcoal mb-6">The Digital Divide</h2>
        <p class="text-body-lg text-muted">
          Traditional infrastructure approaches have failed to close the connectivity gap. 
          The economics simply don't work for low-density, low-income populations.
        </p>
      </div>
      
      <div class="grid md:grid-cols-3 gap-8">
        {challenges.map((challenge) => (
          <div class="text-center p-8 bg-cream border border-border">
            <p class="text-4xl md:text-5xl font-medium text-charcoal mb-2">{challenge.stat}</p>
            <p class="text-sm font-medium text-primary mb-3">{challenge.label}</p>
            <p class="text-sm text-muted">{challenge.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Our Approach -->
  <section class="py-24 bg-cream">
    <div class="max-w-7xl mx-auto px-6">
      <div class="max-w-3xl mb-16">
        <span class="text-caption text-primary mb-4 block">Our Approach</span>
        <h2 class="text-display-lg text-charcoal mb-6">A Different Model</h2>
        <p class="text-body-lg text-muted">
          TrueLeap takes a fundamentally different approach to rural connectivity. 
          Instead of extending traditional infrastructure, we deploy autonomous, 
          self-sustaining systems designed for the unique challenges of remote areas.
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 gap-8">
        {approach.map((item) => (
          <div class="card">
            <div class="w-12 h-12 rounded-xl bg-primary-lighter/50 flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
              </svg>
            </div>
            <h3 class="text-xl font-medium text-charcoal mb-2">{item.title}</h3>
            <p class="text-muted">{item.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Impact Metrics -->
  <section class="py-16 bg-charcoal">
    <div class="max-w-7xl mx-auto px-6">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
        {metrics.map((metric) => (
          <div class="text-center">
            <p class="text-3xl md:text-4xl font-medium text-white mb-1">{metric.value}</p>
            <p class="text-sm text-white/60">{metric.label}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Case Study -->
  <section class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-6">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <div>
          <span class="inline-block px-3 py-1 rounded-full bg-indigo-light text-primary text-xs font-medium mb-4">
            Case Study
          </span>
          <p class="text-sm text-muted mb-2">{caseStudy.country}</p>
          <h2 class="text-display-md text-charcoal mb-6">{caseStudy.title}</h2>
          <p class="text-body-lg text-muted mb-8">{caseStudy.description}</p>
          <a href="/en/impact/case-studies" class="link-arrow font-medium text-charcoal">
            Read full case study
          </a>
        </div>
        
        <div>
          <div class="grid grid-cols-3 gap-4 mb-8">
            {caseStudy.results.map((result) => (
              <div class="card text-center">
                <p class="text-2xl md:text-3xl font-medium text-charcoal mb-1">{result.metric}</p>
                <p class="text-xs text-muted">{result.label}</p>
              </div>
            ))}
          </div>
          
          <div class="aspect-video rounded-2xl bg-cream border border-border flex items-center justify-center">
            <div class="text-center p-8">
              <div class="w-16 h-16 mx-auto mb-4 rounded-2xl bg-primary-lighter/50 flex items-center justify-center">
                <span class="text-2xl">ðŸ‡®ðŸ‡©</span>
              </div>
              <p class="text-sm text-muted">Eastern Indonesia Deployment</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-24 bg-cream border-t border-border">
    <div class="max-w-3xl mx-auto px-6 text-center">
      <h2 class="text-display-md text-charcoal mb-6">
        Ready to connect your community?
      </h2>
      <p class="text-body-lg text-muted mb-8">
        Whether you're a government, NGO, or private enterprise, we can help you 
        design a connectivity solution that works for your unique context.
      </p>
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        <a href="mailto:hello@trueleapinc.com" class="btn btn-primary">
          Get in Touch
        </a>
        <a href="/en/impact/network-map" class="btn btn-secondary">
          View Live Network
        </a>
      </div>
    </div>
  </section>
</Page>
