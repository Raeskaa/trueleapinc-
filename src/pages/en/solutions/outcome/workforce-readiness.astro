---
import Page from '../../../../layouts/Page.astro';
const lang = 'en';
---

<Page title="Workforce Readiness" lang={lang}>
  <section class="pt-32 pb-20 bg-cream">
    <div class="max-w-7xl mx-auto px-6">
      <p class="font-mono uppercase tracking-[0.3em] text-xs text-charcoal/60 mb-4">Solutions / Outcome</p>
      <h1 class="font-display text-5xl md:text-6xl lg:text-7xl leading-tight text-charcoal mb-8">Workforce <em>Readiness</em></h1>
      <p class="text-xl text-charcoal/70 max-w-3xl">Building digital skills for the jobs of tomorrow.</p>
    </div>
  </section>
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-6">
      <div class="grid md:grid-cols-2 gap-12">
        <div>
          <h2 class="font-display text-3xl mb-6">Training Programs</h2>
          <p class="text-charcoal/70">Comprehensive digital skills curriculum delivered through our platform, accessible offline and online.</p>
        </div>
        <div>
          <h2 class="font-display text-3xl mb-6">Certification</h2>
          <p class="text-charcoal/70">Industry-recognized credentials that demonstrate proficiency in key digital competencies.</p>
        </div>
      </div>
    </div>
  </section>
</Page>
