---
import Page from '../../../../layouts/Page.astro';

const lang = 'en';

const programs = [
  {
    title: 'Digital Literacy Foundation',
    duration: '4 weeks',
    level: 'Beginner',
    description: 'Core digital skills including device operation, internet navigation, digital communication, and online safety.',
    outcomes: ['Basic computer operation', 'Internet and email proficiency', 'Digital safety awareness', 'Mobile device skills'],
  },
  {
    title: 'Productivity & Collaboration',
    duration: '6 weeks',
    level: 'Intermediate',
    description: 'Professional tools for document creation, data management, and team collaboration using offline-capable applications.',
    outcomes: ['Document creation and editing', 'Spreadsheet fundamentals', 'Cloud collaboration tools', 'Professional communication'],
  },
  {
    title: 'Technical Vocational Skills',
    duration: '12 weeks',
    level: 'Advanced',
    description: 'Specialized training in high-demand technical fields including data entry, customer service, and basic programming.',
    outcomes: ['Data entry certification', 'Customer service skills', 'Basic coding fundamentals', 'Remote work readiness'],
  },
  {
    title: 'Entrepreneurship & E-Commerce',
    duration: '8 weeks',
    level: 'Intermediate',
    description: 'Launch and grow digital businesses with training in online selling, digital marketing, and financial management.',
    outcomes: ['E-commerce setup', 'Digital marketing basics', 'Financial record keeping', 'Customer acquisition'],
  },
];

const certifications = [
  {
    name: 'TrueLeap Digital Citizen',
    level: 'Foundation',
    description: 'Validates core digital literacy skills required for basic digital participation.',
    recognized: '47 countries',
  },
  {
    name: 'TrueLeap Productivity Professional',
    level: 'Intermediate',
    description: 'Demonstrates proficiency in digital productivity and collaboration tools.',
    recognized: '47 countries',
  },
  {
    name: 'TrueLeap Technical Associate',
    level: 'Advanced',
    description: 'Certifies readiness for entry-level technical and remote work positions.',
    recognized: '47 countries',
  },
];

const metrics = [
  { value: '2.4M', label: 'Learners Trained' },
  { value: '78%', label: 'Employment Rate' },
  { value: '340%', label: 'Average Income Increase' },
  { value: '47', label: 'Countries' },
];

const employers = [
  'Andela', 'Safaricom', 'Jumia', 'Flutterwave', 'Twiga Foods', 'M-KOPA'
];
---

<Page title="Workforce Readiness" lang={lang}>
  <!-- Hero -->
  <section class="pt-32 pb-20 bg-cream relative overflow-hidden">
    <div class="absolute inset-0 grid-lines opacity-40"></div>
    <div class="max-w-7xl mx-auto px-6 relative z-10">
      <span class="text-caption text-primary mb-4 block">Solutions / Outcome</span>
      <h1 class="text-display-xl text-charcoal mb-8">
        Workforce <span class="display-serif">Readiness</span>
      </h1>
      <p class="text-body-lg text-muted max-w-3xl mb-8">
        Building digital skills for the jobs of tomorrow. Comprehensive training 
        programs delivered through our offline-capable platform, with industry-recognized 
        certifications that open doors to economic opportunity.
      </p>
      <div class="flex flex-wrap gap-4">
        <a href="mailto:education@trueleapinc.com" class="btn btn-primary">
          Partner With Us
        </a>
        <a href="/en/solutions/industry/education" class="btn btn-secondary">
          Education Solutions
        </a>
      </div>
    </div>
  </section>

  <!-- Impact Metrics -->
  <section class="py-16 bg-charcoal">
    <div class="max-w-7xl mx-auto px-6">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
        {metrics.map((metric) => (
          <div class="text-center">
            <p class="text-3xl md:text-4xl font-medium text-white mb-1">{metric.value}</p>
            <p class="text-sm text-white/60">{metric.label}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Training Programs -->
  <section class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-6">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <span class="text-caption text-primary mb-4 block">Training Programs</span>
        <h2 class="text-display-lg text-charcoal mb-6">Structured Learning Paths</h2>
        <p class="text-body-lg text-muted">
          Progressive curriculum designed for learners at every level, from digital 
          beginners to those seeking technical careers.
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 gap-8">
        {programs.map((program) => (
          <div class="card">
            <div class="flex items-center gap-4 mb-4">
              <span class="px-3 py-1 rounded-full bg-indigo-light text-primary text-xs font-medium">
                {program.level}
              </span>
              <span class="text-sm text-muted">{program.duration}</span>
            </div>
            <h3 class="text-xl font-medium text-charcoal mb-2">{program.title}</h3>
            <p class="text-muted mb-4">{program.description}</p>
            <div class="pt-4 border-t border-border">
              <p class="text-xs text-muted uppercase tracking-wider mb-2">Learning Outcomes</p>
              <ul class="grid grid-cols-2 gap-2">
                {program.outcomes.map((outcome) => (
                  <li class="text-sm text-charcoal flex items-center gap-2">
                    <svg class="w-4 h-4 text-primary flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    {outcome}
                  </li>
                ))}
              </ul>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Certifications -->
  <section class="py-24 bg-cream">
    <div class="max-w-7xl mx-auto px-6">
      <div class="max-w-3xl mb-16">
        <span class="text-caption text-primary mb-4 block">Certifications</span>
        <h2 class="text-display-lg text-charcoal mb-6">Industry-Recognized Credentials</h2>
        <p class="text-body-lg text-muted">
          Our certifications are recognized by employers across 47 countries, 
          providing learners with credentials that translate directly to economic opportunity.
        </p>
      </div>
      
      <div class="grid md:grid-cols-3 gap-8">
        {certifications.map((cert) => (
          <div class="card text-center">
            <div class="w-16 h-16 mx-auto mb-4 rounded-2xl bg-primary-lighter/50 flex items-center justify-center">
              <svg class="w-8 h-8 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
              </svg>
            </div>
            <span class="inline-block px-3 py-1 rounded-full bg-cream text-muted text-xs font-medium mb-3">
              {cert.level}
            </span>
            <h3 class="text-lg font-medium text-charcoal mb-2">{cert.name}</h3>
            <p class="text-sm text-muted mb-4">{cert.description}</p>
            <p class="text-xs text-primary">Recognized in {cert.recognized}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Employer Network -->
  <section class="py-24 bg-charcoal text-white">
    <div class="max-w-7xl mx-auto px-6">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <span class="text-caption text-primary-light mb-4 block">Employer Network</span>
        <h2 class="text-display-lg text-white mb-6">Direct Pathways to Employment</h2>
        <p class="text-body-lg text-white/70">
          We partner with leading employers who actively recruit TrueLeap graduates, 
          creating direct pathways from training to employment.
        </p>
      </div>
      
      <div class="flex flex-wrap justify-center gap-8 mb-12">
        {employers.map((employer) => (
          <div class="px-6 py-4 bg-charcoal-light border border-border-dark">
            <span class="text-lg font-medium text-white">{employer}</span>
          </div>
        ))}
      </div>
      
      <div class="grid md:grid-cols-3 gap-8">
        <div class="p-8 rounded-2xl bg-charcoal-light border border-border-dark text-center">
          <p class="text-3xl font-medium text-white mb-2">200+</p>
          <p class="text-sm text-white/60">Employer Partners</p>
        </div>
        <div class="p-8 rounded-2xl bg-charcoal-light border border-border-dark text-center">
          <p class="text-3xl font-medium text-white mb-2">78%</p>
          <p class="text-sm text-white/60">Job Placement Rate</p>
        </div>
        <div class="p-8 rounded-2xl bg-charcoal-light border border-border-dark text-center">
          <p class="text-3xl font-medium text-white mb-2">90 days</p>
          <p class="text-sm text-white/60">Average Time to Employment</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-24 bg-white border-t border-border">
    <div class="max-w-3xl mx-auto px-6 text-center">
      <h2 class="text-display-md text-charcoal mb-6">
        Partner with us on workforce development
      </h2>
      <p class="text-body-lg text-muted mb-8">
        Whether you're a government agency, educational institution, NGO, or employer, 
        we can help you build effective workforce development programs.
      </p>
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        <a href="mailto:education@trueleapinc.com" class="btn btn-primary">
          Contact Education Team
        </a>
        <a href="/en/resources/docs" class="btn btn-secondary">
          Program Documentation
        </a>
      </div>
    </div>
  </section>
</Page>
